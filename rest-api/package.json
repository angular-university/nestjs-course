{
  "name": "nestjs-course-backend",
  "private": true,
  "version": "1.0.0",
  "description": "NestJs Course",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "clean": "rimraf dist",
    "run-populate-db": "node ./dist/rest-api/populate-db.js",
    "populate-db": "run-s clean build run-populate-db",
    "start:local": "tsc-watch -p tsconfig.build.json --onSuccess \"node dist/rest-api/src/main.js\"",
    "server": "run-s clean start:local",
    "start:debug": "tsc-watch -p tsconfig.build.json --onSuccess \"node --inspect-brk dist/rest-api/src/main.js\"",
    "start:prod": "node dist/rest-api/src/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^6.5.3",
    "@nestjs/core": "^6.5.3",
    "@nestjs/microservices": "^6.5.3",
    "@nestjs/mongoose": "^6.1.2",
    "@nestjs/platform-express": "^6.5.3",
    "@nestjs/websockets": "^6.5.3",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.10.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.7.1",
    "npm-run-all": "^4.1.5",
    "password-hash-and-salt": "^0.1.4",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.0",
    "rxjs": "6.5.2"
  },
  "devDependencies": {
    "@nestjs/testing": "6.5.3",
    "@types/express": "4.17.1",
    "@types/node": "12.7.2",
    "@types/supertest": "2.0.8",
    "jest": "^26.6.3",
    "prettier": "1.18.2",
    "supertest": "4.0.2",
    "ts-jest": "^26.4.4",
    "ts-node": "8.3.0",
    "tsc-watch": "2.4.0",
    "tsconfig-paths": "3.8.0",
    "tslint": "5.18.0",
    "typescript": "3.5.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
